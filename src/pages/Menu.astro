---
// component imports
import Button from "../components/Button.astro"

// mapping repetitive items
const cakes = [
    { src: Cake1, alt: 'strawberry cake', name: 'Strawberry Cake', price: '₱ 570', category:'#birthday' },
    { src: Cake2, alt: 'fruity cake', name: 'Fruity Cake', price: '₱ 480', category:'#wedding'},
    { src: Cake3, alt: 'strawberry fondue', name: 'Strawberry Fondue', price: '₱ 530', category:'#birthday'},
    { src: Cake4, alt: 'strawberry cream filled cake', name: 'Strawberry Cream Filled Cake', price: '₱ 999', category:'#custom'},
    
];

// asset imports
import { Image } from 'astro:assets';
import Cake1 from "../images/cake-1.jpg";
import Cake2 from "../images/cake-2.jpg";
import Cake3 from "../images/cake-3.jpg";
import Cake4 from "../images/cake-4.jpg";
---

<section id="menu">
    <div class="container-lg">
        <div class="text-center mb-5">
            <div class="section-title">
                <p class="cs-topper">Explore Our Cakes</p>
                <h1>Menu & Pricing</h1>
            </div>

            <div class="button-group">
                <Button buttonName="Birthday" buttonColor="button-red"/>
                <Button buttonName="Wedding" buttonColor="button-red mx-2"/>
                <Button buttonName="Custom" buttonColor="button-red"/>
            </div>
        </div>

        <div class="row pt-5">
            {cakes.map((cake) => (
            <div class="col-lg-3">
                    <div class="position-relative">
                        <Image src={cake.src} alt={cake.alt} decoding="async" loading="lazy" style="object-fit: cover;" class="w-100 rounded-4" />
                        <p class="position-absolute top-0 mt-3 ms-3"><mark class="mark px-3 rounded-5">{cake.price}</mark></p>
                        <p class="mt-3 mb-5 mb-lg-0 ms-2">{cake.name}</p>
                    </div>
            </div>))}
            
